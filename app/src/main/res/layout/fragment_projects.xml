<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Presentation.ui.projects.ProjectsFragment">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/bt_add_project"
        android:src="@android:drawable/ic_input_add"
        style="@style/fab.default"/>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentContainerView"
        android:layout_marginHorizontal="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <androidx.core.widget.NestedScrollView
        android:overScrollMode="ifContentScrolls"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                style="@style/toolbar.default"
                android:layout_margin="0dp"
                android:elevation="0dp"
                android:background="?recyclerView_default_background"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/toolbar_elevation"
                style="@style/toolbar.default"
                android:layout_margin="0dp"
                android:elevation="0dp"
                android:background="?recyclerView_default_background"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_projects"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/recyclerView.default" />

            <View
                android:layout_width="match_parent"
                style="@style/toolbar.default"
                android:layout_margin="0dp"
                android:elevation="0dp"
                android:background="?recyclerView_default_background"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/toolbar_elevation"
                style="@style/toolbar.default"
                android:layout_margin="0dp"
                android:elevation="0dp"
                android:background="?recyclerView_default_background"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</FrameLayout>